@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
	Layout = "Layout.cshtml";
}
<div class="row">
	<h2>디자이너 등록</h2>
	<div>
		<p>
			<span>이름</span>
			<input type="text" id="name" />
		</p>
		<p>
			<span>연락처</span>
			<input type="text" id="phone" />
		</p>
		<p>
			<span>사진</span>
			<input type="text" id="picture" />
		</p>
		<p>
			<button id="btn-add-designer">추가</button>
		</p>
	</div>
</div>

@section Css
{
}

@section Javascript
{
<script type="text/javascript">
	$(document).ready(function () {
		$('#btn-add-designer').click(function () {
			$.post('/designer/add',
			{
				name: $('#name').val(),
				phone: $('#phone').val(),
				picture: $('#picture').val()
			},
			function (data, status, xhr) {
				alert(data + ', ' + status);
			});
		});
	});
</script>

}